@model ZapCharts.Views.ViewModel.Formulario.FormularioCadastroAnaliseViewModel
@{
    ViewBag.Title = "Analise";
}


@using (Html.BeginForm("Analise", "Analise", FormMethod.Post))
{
    <div class="form-group row">
        <label class="col-xs-2 col-form-label">
            <h4>Registro Número:</h4>
        </label>
        <div class="col-xs-10">
            @Html.TextBoxFor(x => x.Registro, new { @class = "form-control", @Value="000235"})
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-2 col-form-label">
            <h4>Nome/código da aplicação:</h4>
        </label>
        <div class="col-xs-10">
            @Html.TextBoxFor(x => x.NomeCodigoApp, new { @class = "form-control"})
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-2 col-form-label">
            <h4>Endereço eletrônico (URL):</h4>
        </label>
        <div class="col-xs-10">
            @Html.TextBoxFor(x => x.EnderecoEletronico, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label  class="col-xs-2 col-form-label">
            <h4>Data da verificação:</h4>
        </label>
        <div class="col-xs-10">
            @Html.TextBoxFor(x => x.DtVerificacao, new { @class = "form-control", type = "date" })
        </div>
    </div>
    <hr class="hrDestaque">
    <div class="form-group row">
        <div class="col-sm-10">
            <div class="form-check">
                <label class="form-check-label">
                    @Html.CheckBoxFor(x => x.ValidarZap) ZAP 2.5.0
                </label> 
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <div class="form-check">
                <label class="form-check-label">
                    @Html.CheckBoxFor(x => x.ValidarIronwasp) IronWasp
                </label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <div class="form-check">
                <label class="form-check-label">
                    @Html.CheckBoxFor(x => x.ValidarGrabber) Grabber
                </label>
            </div>
        </div>
    </div>
}
    <div class="row">
        <div class="row">
            <div class="col-sm-5">
            </div>
            <div class="col-sm-1">
                <a href='@Url.Action("index","Dashboard")' class="btn btn-primary  btn-sm"><< Voltar</a>
            </div>
            <div class="col-sm-1">
                <button class="btn btn-default btn-sm" onclick="limparFormulario()">Limpar Campos</button>
            </div>
            <div class="col-sm-1">
            </div>
            <div class="col-sm-1">
                <button class="btn btn-primary btn-sm" onclick="enviarFormulario()">Próximo >></button>
                <div class="col-sm-4">
                </div>
            </div>
        </div>
    </div>

<script src="~/scripts/analise/index/index.js"></script>






